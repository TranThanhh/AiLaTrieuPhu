<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:clickable="true"
    android:orientation="vertical"
    tools:context=".adminpage.cauhoi.ViewCauHoiFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#979797"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageviewBack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/backgroundButton"
            android:padding="10dp"
            android:src="@drawable/ic_goback_home"></ImageView>

        <TextView
            android:id="@+id/textviewTitleCauHoi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="ID: "
            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageviewSave"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/backgroundButton"
            android:padding="10dp"
            android:src="@drawable/ic_save"></ImageView>
    </LinearLayout>

    <TextView
        android:id="@+id/edittextNoiDungCauHoi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="top"
        android:maxLength="1000"
        android:paddingStart="10dp"
        android:singleLine="false"
        android:text="Có bao nhiêu con gà trong cuốn sách của Lép tôn xờ tôi?"
        android:textColor="#000"
        android:textSize="20sp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Câu trả lời"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Đáp án đúng"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="A."
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="B."
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="C."
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="D."
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/edittextTraLoiA"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:gravity="center_vertical"
                android:maxLength="50"
                android:singleLine="true"
                android:text="Có 2 con"
                android:textColor="#000"
                android:textSize="20sp"></TextView>

            <TextView
                android:id="@+id/edittextTraLoiB"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:gravity="center_vertical"
                android:maxLength="50"
                android:singleLine="true"
                android:text="Có 3 con"
                android:textColor="#000"
                android:textSize="20sp"></TextView>

            <TextView
                android:id="@+id/edittextTraLoiC"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:gravity="center_vertical"
                android:maxLength="50"
                android:singleLine="true"
                android:text="Có 4 con"
                android:textColor="#000"
                android:textSize="20sp"></TextView>

            <TextView
                android:id="@+id/edittextTraLoiD"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:gravity="center_vertical"
                android:maxLength="50"
                android:singleLine="true"
                android:text="Có 5 con"
                android:textColor="#000"
                android:textSize="20sp"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageviewCauA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="17dp"
                android:layout_weight="1"
                android:src="@drawable/ic_true"></ImageView>

            <ImageView
                android:id="@+id/imageviewCauB"
                android:layout_width="match_parent"
                android:padding="17dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_true"></ImageView>

            <ImageView
                android:id="@+id/imageviewCauC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="17dp"
                android:layout_weight="1"
                android:src="@drawable/ic_true"></ImageView>

            <ImageView
                android:id="@+id/imageviewCauD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="17dp"
                android:layout_weight="1"
                android:src="@drawable/ic_true"></ImageView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Loại"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"></TextView>

        <RadioGroup
            android:id="@+id/radiogroupLoai"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioDe"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Dễ"
                android:textSize="20sp"></RadioButton>

            <RadioButton
                android:id="@+id/radioVua"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Vừa"
                android:textSize="20sp"></RadioButton>

            <RadioButton
                android:id="@+id/radioKho"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Khó"
                android:textSize="20sp"></RadioButton>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/backgroundButton"
            android:drawableLeft="@drawable/ic_delete"
            android:gravity="center"
            android:text="Xóa"
            android:textAlignment="gravity"
            android:textSize="17sp"></Button>

    </LinearLayout>
</LinearLayout>