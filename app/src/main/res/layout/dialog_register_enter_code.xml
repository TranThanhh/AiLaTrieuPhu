<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingTop="13dp"
    android:paddingStart="13dp"
    android:paddingEnd="13dp"
    android:paddingBottom="5dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="@drawable/underline_fragment_title"
        android:text="Xác nhận đăng ký"
        android:textColor="#000"
        android:textSize="25sp"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Code: "
            android:textColor="#000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editText_Code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@drawable/rounded_border_edittext"
            android:gravity="center_vertical"
            android:hint="Nhập vào mã code"
            android:textSize="16sp"
            android:paddingStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/textViewSendCode1"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Nếu chưa nhận được code, "
            android:textSize="18sp"
            android:textColor="#07C8E0"
            android:gravity="center_vertical|right" />
        <TextView
            android:id="@+id/textViewSendCode2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Bấm vào đây!"
            android:textSize="18sp"
            android:textColor="#07C8E0"
            android:gravity="center_vertical"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="8dp"
        android:paddingStart="50dp"
        android:paddingEnd="50dp">

        <Button
            android:id="@+id/buttonSubmitCode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_select"
            android:text="Xác nhận"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="14sp"
            android:layout_marginEnd="5dp"/>

        <Button
            android:id="@+id/buttonCancelCode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_select"
            android:text="Hủy"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="14sp"
            android:layout_marginStart="5dp"/>

    </LinearLayout>
</LinearLayout>